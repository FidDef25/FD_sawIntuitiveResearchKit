{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "cisst-matrices.schema.json",
    "title": "cisstMultiTask matrices",
    "type": "object",
    "description": "matrices",
    "additionalProperties": false,
    "definitions": {

        "matrix3x3": {
            "description": "3 by 3 matrix, i.e. rotation",
            "type": "array",
            "minItems": 3,
            "maxItems": 3,
            "items": {
                "type": "array",
                "minItems": 3,
                "maxItems": 3,
                "items": {
                    "type": "number"
                }
            }
        },

        "matrix4x4": {
            "description": "4 by 4 matrix, i.e. homogeneous transform",
            "type": "array",
            "minItems": 4,
            "maxItems": 4,
            "items": {
                "type": "array",
                "minItems": 4,
                "maxItems": 4,
                "items": {
                    "type": "number"
                }
            }
        }
    }
}
